<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sunrise">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />

        <service
            android:name=".NotificationService"
            android:enabled="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".Questions1"
            android:label="@string/title_activity_questions1"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Questions2"
            android:label="@string/title_activity_questions2"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:label="Sunrise"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Questions3"
            android:label="@string/title_activity_questions3"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Questions4"
            android:label="@string/title_activity_questions4"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Questions5"
            android:label="@string/title_activity_questions5"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TaskActivity"
            android:label="@string/title_activity_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TaskView"
            android:label="TaskView"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>